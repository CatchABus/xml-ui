{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2022",
    "module": "esnext",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["es2022"],
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "diagnostics": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}